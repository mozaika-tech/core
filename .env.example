# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mozaika_db

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/scraped-messages
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Optional: For LocalStack testing
# AWS_ENDPOINT_URL=http://localhost:4566

# LLM Configuration (choose one provider)
LLM_PROVIDER=anthropic  # Options: anthropic | gemini | openai | deepseek

# API Keys (provide the one matching your LLM_PROVIDER)
ANTHROPIC_API_KEY=sk-ant-api-key-here
# GEMINI_API_KEY=your_gemini_api_key
# OPENAI_API_KEY=sk-your-openai-api-key
# DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# Embedding Model (local, no API key needed)
EMBEDDING_MODEL=intfloat/multilingual-e5-small

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# SQS Consumer Configuration
SQS_POLL_INTERVAL_SECONDS=20
SQS_BATCH_SIZE=10
SQS_VISIBILITY_TIMEOUT=300
SQS_MAX_RETRIES=3

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production